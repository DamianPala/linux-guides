# Readline improvements via bind (complements ~/.inputrc)

# Case-insensitive tab completion
bind 'set completion-ignore-case on'

# Treat hyphens and underscores as equivalent in completion
bind 'set completion-map-case on'

# Show all matches on first Tab press (no double-tab needed)
bind 'set show-all-if-ambiguous on'

# Tab cycles through matches instead of showing list
bind 'TAB: menu-complete'

# Shift+Tab cycles backward
bind '"\e[Z": menu-complete-backward'

# Color-code completions by file type (like ls)
bind 'set colored-stats on'
